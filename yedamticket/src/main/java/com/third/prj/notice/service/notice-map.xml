<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.third.prj.notice.service.NoticeMapper">

	<!-- 칼럼명이 VO객체와 일치하지 않을경우 resultMap 만들어줌 -->
	<resultMap type="com.third.prj.notice.vo.NoticeVO" id="noticeResultMap">
		<id property="noticeNo" column="notice_no"/><!-- primary key -->
		<result property="title" column="title"/>
		<result property="content" column="content"/>
		<result property="wrDt" column="wrdt"/>
		<result property="hit" column="hit"/>
		<result property="writer" column="writer"/>
	</resultMap>
	
	<select id="noticeSelectList" resultMap="noticeResultMap">
		SELECT * FROM NOTICE ORDER BY NOTICE_NO DESC
	</select>
	<!-- select 셀렉트는 매개변수가 있어도 parameter타입 안써도됨 -->
	<select id="noticeSelect" parameterType="com.third.prj.notice.vo.NoticeVO"
			resultMap="noticeResultMap">
		SELECT * FROM NOTICE WHERE NOTICE_NO = #{noticeNo}	
	</select>
	
	<insert id="noticeInsert" parameterType="com.third.prj.notice.vo.NoticeVO">
		<selectKey keyProperty="noticeNo" resultType="int" order="BEFORE">
			SELECT MAX(NOTICE_NO)+1 AS NOTICENO FROM NOTICE		
		</selectKey>
		INSERT INTO NOTICE(NOTICE_NO, TITLE, CONTENT, WRDT, WRITER)
		VALUES(#{noticeNo}, #{title}, #{content}, #{wrDt}, #{writer})
	</insert>
	
	<update id="noticeUpdate" parameterType="com.third.prj.notice.vo.NoticeVO">
		UPDATE NOTICE
		<set>
			<if test="title != null"> TITLE = #{title},</if>
			<if test="content != null"> CONTENT = #{content},</if>
		</set>
		WHERE NOTICE_NO = #{noticeNo}
	</update>
	
	<delete id="noticeDelete" parameterType="com.third.prj.notice.vo.NoticeVO">
		DELETE FROM NOTICE WHERE NOTICE_NO = #{noticeNo}
	</delete>
	
	<update id="noticeHitUpdate" parameterType="int">
		UPDATE NOTICE SET HIT = HIT + 1 WHERE NOTICE_NO = #{noticeNo}<!-- 넘어온 파라미터값 -->
	</update>
</mapper>